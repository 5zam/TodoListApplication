@model IEnumerable<ToDoListApplication.Models.Category>

@{
    ViewData["Title"] = "All Categories";
}

<h2>@ViewData["Title"]</h2>

<a href="@Url.Action("AddNewCategory", "Category")" class="btn btn-success mb-4">+ Add Category</a>

<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@category.Name</h5>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- button view task-->
                        <a href="@Url.Action("DisplayAllTasks", "Todo", new { categoryId = category.Id })" class="btn btn-sm btn-outline-primary">
                            View Tasks
                        </a>

                        <!-- button delete category -->
                        <form asp-action="DeleteCategory" asp-controller="Category" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@category.Id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this category?')">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
