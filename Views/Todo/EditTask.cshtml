@model ToDoListApplication.Models.Todo

<h2>Edit Task</h2>

<form asp-action="EditTask" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CategoryId" />

    <div class="form-group mb-2">
        <label>Task Name</label>
        <input asp-for="TaskName" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <div class="form-group mb-2">
        <label>Deadline</label>
        <input asp-for="Deadline" type="date" class="form-control" />
    </div>

    <div class="form-group mb-2">
        <label>Priority</label>
        <select asp-for="Priority" class="form-control" asp-items="Html.GetEnumSelectList<ToDoListApplication.Models.Enum.PriorityStatus>()">
        </select>
    </div>

    <button type="submit" class="btn btn-warning">Update</button>
    <a href="@Url.Action("DisplayAllTasks", "Todo", new { categoryId = Model.CategoryId })" class="btn btn-secondary ms-2">Cancel</a>
</form>
